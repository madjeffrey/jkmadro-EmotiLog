<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="80dp"
    android:background="#F5F5F5"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="8dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emotion Summary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Date Picker Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Date"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <DatePicker
                    android:id="@+id/datePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:datePickerMode="calendar"
                    android:calendarViewShown="false" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShowSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Summary"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Summary Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Summary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <!-- Total Emotions -->
                <TextView
                    android:id="@+id/tvTotalEmotions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Emotions: 0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#6200EE"
                    android:layout_marginBottom="16dp"
                    android:gravity="center" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="12dp" />

                <!-- Emotion Counts -->
                <TextView
                    android:id="@+id/tvHappyCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="😊 Happy: 0"
                    android:textSize="16sp"
                    android:paddingVertical="8dp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tvSadCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="😢 Sad: 0"
                    android:textSize="16sp"
                    android:paddingVertical="8dp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tvAngryCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="😠 Angry: 0"
                    android:textSize="16sp"
                    android:paddingVertical="8dp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tvExcitedCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🤩 Excited: 0"
                    android:textSize="16sp"
                    android:paddingVertical="8dp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tvTiredCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="😴 Tired: 0"
                    android:textSize="16sp"
                    android:paddingVertical="8dp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tvLoveCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="😍 Love: 0"
                    android:textSize="16sp"
                    android:paddingVertical="8dp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tvNeutralCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="😐 Neutral: 0"
                    android:textSize="16sp"
                    android:paddingVertical="8dp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tvAnxiousCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="😰 Anxious: 0"
                    android:textSize="16sp"
                    android:paddingVertical="8dp"
                    android:textColor="#333333" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>